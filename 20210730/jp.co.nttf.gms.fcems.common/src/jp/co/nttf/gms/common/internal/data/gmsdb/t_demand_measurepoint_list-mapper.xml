  <select id="selectByListId" resultType="TDemandMeasurepointList" resultMap="demandmeasurepointlistMap">
    SELECT <include refid="allColumns"/>
    FROM <include refid="tableName"/>
    WHERE demand_measurepoint_list_id = #{demandMeasurepointListId}
  </select>
</mapper>
