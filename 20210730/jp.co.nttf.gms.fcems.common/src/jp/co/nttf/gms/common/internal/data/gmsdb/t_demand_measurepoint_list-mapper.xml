<mapper namespace="jp.co.nttf.gms.common.internal.data.gmsdb.TDemandMeasurepointListMapper">
  <!-- テーブル名 -->
  <sql id="tableName">t_demand_measurepoint_list</sql>
  <!-- 全カラム名 -->
  <sql id="allColumns">
    demand_measurepoint_list_id, demand_measurepoint_id
  </sql>
  <resultMap id="demandmeasurepointlistMap" type="TDemandMeasurepointList">
    <result property="demand_measurepoint_id" column="demand_measurepoint_id" typeHandler="org.apache.ibatis.type.ArrayTypeHandler" javaType="Integer[]" jdbcType="ARRAY" />
  </resultMap>
  <!-- 全件取得クエリ -->
  <select id="selectAll" resultType="TDemandMeasurepointList">
    SELECT <include refid="allColumns"/>
    FROM <include refid="tableName"/>
  </select>
