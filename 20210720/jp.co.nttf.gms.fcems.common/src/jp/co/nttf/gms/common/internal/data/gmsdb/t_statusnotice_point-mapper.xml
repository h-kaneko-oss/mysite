<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC
  "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.nttf.gms.common.internal.data.gmsdb.TStatusnoticePointMapper">
  <!-- テーブル名 -->
  <sql id="tableName">t_statusnotice_point</sql>
  <!-- 全カラム名 -->
  <sql id="allColumns">
    messageno, measurepointid, noticetime, confirmtime, status, confirmuser, note
  </sql>
  <!-- 指定したメッセージNo間のうち最大メッセージNoの接点入力情報を1件取得する -->
  <select id="getStatusnoticePointForMsgNo" resultType="TStatusnoticePoint">
    SELECT <include refid="allColumns"/>
    FROM <include refid="tableName"/>
    WHERE
      measurepointid = #{measurepointid}
      AND (messageno > #{minmsgno} AND messageno <![CDATA[ <= ]]> #{maxmsgno})
      AND status = 1
    ORDER BY
      messageno DESC
    LIMIT 1
  </select>
  <!-- 最新のメッセージNoを取得する -->
  <select id="getLastMessageNo" resultType="Integer">
    SELECT
      messageno
    FROM <include refid="tableName"/>
    ORDER BY
      messageno DESC
    LIMIT 1
  </select>
</mapper>
